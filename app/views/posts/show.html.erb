<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		Publicado hace <%= time_ago_in_words(@post.created_at) %>
		| <%= link_to 'Editar', edit_post_path(@post) %> 
		| <%= link_to 'Eliminar', post_path(@post), method: :delete, data: { confirm: 'Esta seguro?'} %> 
	</p>

	<p class="body">
		<%= @post.body %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> Comentarios</h2>
		<%= render @post.comments %>

		<h3>AÃ±adir un comentario: </h3>
		<%= render "comments/form" %>

	</div>

</div>
